<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:layout_rowWeight="3"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_two_pane"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/image_margin"
        android:layout_weight="2"
        android:padding="@dimen/image_padding"
        android:src="@drawable/profile"
        android:visibility="gone"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="2dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:layout_marginEnd="12dp"
        android:background="@android:color/darker_gray"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_margin="@dimen/profile_text_view_margin"
                android:gravity="center">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_person_outline_black_32dp"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/username"
                    style="?android:attr/autoLink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_weight="3"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:textIsSelectable="true"
                    tools:context="com.example.andelachallenge.activities.DeveloperDetailFragment"
                    tools:text="segunfamisa" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_margin="@dimen/profile_text_view_margin">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/github_mark_32px" />

                <TextView
                    android:id="@+id/github_link"
                    style="?android:attr/autoLink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_weight="3"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:clickable="true"
                    android:autoLink="web"
                    android:textIsSelectable="true"
                    tools:context="com.example.andelachallenge.activities.DeveloperDetailFragment"
                    tools:text="http://msbkjfhkjshkahfkjhaf" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

